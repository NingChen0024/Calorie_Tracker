<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="120dp"
    android:paddingRight="24dp">


    <ImageView android:src="@drawable/track"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/calorieTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:maxLines="10"
        android:textColor="#25383C"
        android:text="Calorie Tracker" />

    <TextView
        android:id="@+id/calorieTittleBlank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:maxLines="10"
        android:text="" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="35dp">

        <TextView
            android:id="@+id/textTwo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Calorie Goal: "
            android:textColor="#25383C"/>
        <TextView
            android:id="@+id/calorieGoal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="35dp">

        <TextView
            android:id="@+id/textOne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Total Steps Taken: "
            android:textColor="#25383C"/>
        <TextView
            android:id="@+id/stepsTaken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="35dp">

        <TextView
            android:id="@+id/textThree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Total Number of Consumed: "
            android:textColor="#25383C"/>
        <TextView
            android:id="@+id/totalConsumed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="35dp">

        <TextView
            android:id="@+id/textFour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Total Number of Burned: "
            android:textColor="#25383C"/>
        <TextView
            android:id="@+id/totalBurned"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""/>

    </LinearLayout>

    <TextView
        android:id="@+id/calorieTittleBlank2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:maxLines="10"
        android:text="" />
    <Button
        android:id="@+id/reportBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create report" />

</LinearLayout>